<%= render "layouts/header" %>
<%= form_for(@place, url: places_path(@place)) do |f| %>
  <h4>場所</h4>
  <br>
  <%= f.text_field :name %>
  <%= f.submit "追加", class: "btn btn-primary" %>
<% end %>
<br>
<table class="table  table-inverse">
  <thead>
  <tr>
    <% @places.each do |place| %>

      <th><%= place.name %></th>
      <th><%= link_to '消去', place_path(place), method: :delete %></th>

    <% end %>
  </tr>
  </thead>
</table>